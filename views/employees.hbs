
<style>
    table, th, td {
        text-align: center;
    }
    a:link { color:rgb(0, 34, 255); text-decoration:none; font-weight:normal; }
    a:visited { color: rgb(115, 0, 255); text-decoration:none; font-weight:normal; }
    a:hover { color: rgb(255, 106, 0); text-decoration:underline; font-weight:normal; }

    h2 a:link { color:rgb(0, 0, 0); text-decoration:none; font-weight:bolder; }
    h2 a:visited { color: rgb(0, 0, 0); text-decoration:none; font-weight:bolder; }
    h2 a:hover { color: rgb(0, 0, 0); text-decoration:underline; font-weight:bold; }
    
</style>
<div class="row">
    <div class="col-md-12"> 
        <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2> 
        <hr />
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th> Employee ID </th>
                            <th> Full Name </th>
                            <th> Email </th>
                            <th> Address </th>
                            <th> Manager ID </th>
                            <th> Status </th>
                            <th> Department </th>
                            <th> Hire On </th>
                            
                        </tr>
                    </thead>
                    
                    <tbody>
                        {{#each employees}}
                        <tr>
                            <td>{{this.employeeNum}}</td> 
                            <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                            <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                            <td><a target="_blank" href="https://www.google.ca/maps/place/{{this.addressStreet}}+{{this.addressCity}}+{{this.addressState}}+{{this.addressPostal}}">{{this.addressStreet}}, {{this.addressCity}}, {{this.addressState}}, {{this.addressPostal}}</a></td>
                            <td>{{#if this.isManager}} N/A {{else}} <a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}<a/> {{/if}}</td>
                            <td><a href="/employees?status={{this.status}}">{{this.status}}<a/></td>
                            <td><a href="/employees?department={{this.department}}">{{this.department}}<a/></td>
                            <td>{{this.hireDate}}</td>
                            <td> <a href="/employees/delete/{{employeeNum}}" class="btn btn-danger">Remove</a></td>
                        </tr>
                        {{else}}
                            <div class="col-md-12 text-center">
                             <strong>{{message}}</strong>
                            </div>
                        {{/each}}
                    </tbody>
                </table>  
            </div>
    </div>  
</div>